#include<stdio.h>
int main()
{
char com [30];
int i=2,a=0;
printf("\n Enter Comment : ");
gets(com);
if(com[0]=='/')
{
if(com[1]=='/')
printf("\n It is single line Comment.");
else if(com [1]=='*')
{
for(i=2;i<=30;i++)
{
if(com[i]=='*'&&com[i+1]=='/')
{
printf("\n It is multi line Comment.");
a=1;
break;
}
else continue;
}
if(a==0)
printf("\n It is Not a Comment.");
}
else
printf("\n It is Not a Comment.");
}
else
printf("\n It is Not a Comment.");
}
///////////////// OUT PUT/////////////////
Enter Comment : welcome to compiler design

 It is Not a Comment.
--------------------------------
 Enter Comment : //welcome to compiler design

 It is single line Comment.
--------------------------------
 Enter Comment : /* WELECOME TO COMPILER DESIGN*/

 It is multi line Comment.
